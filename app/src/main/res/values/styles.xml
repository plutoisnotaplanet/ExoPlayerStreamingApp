<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChannelsSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/sb_background_shape</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:theme">@style/AppWidgetTheme</item>
        <item name="android:paddingStart">-8dp</item>
        <item name="android:paddingEnd">-8dp</item>
    </style>

    <style name="ChannelsTabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/primary</item>
        <item name="android:elevation">0dp</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/surface</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPadding">16dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTitle</item>
        <item name="tabTextColor">@color/on_background</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
<!--        app:tabGravity="start"-->
<!--        app:tabIndicatorColor="@color/surface"-->
<!--        app:tabIndicatorAnimationMode="linear"-->
<!--        app:tabIndicatorGravity="bottom"-->
<!--        app:tabPadding="16dp"-->
<!--        android:layout_marginHorizontal="16dp"-->
<!--        android:paddingBottom="6dp"-->
<!--        app:tabIndicatorHeight="2dp"-->
<!--        app:tabMaxWidth="0dp"-->
<!--        app:tabMode="scrollable"-->
<!--        app:tabRippleColor="@null"-->
<!--        app:tabSelectedTextColor="@color/white"-->
<!--        app:tabTextAppearance="@style/TabTitle"-->
<!--        app:tabTextColor="@color/on_background"-->
    </style>

    <style name="AppWidgetTheme" parent="">
        <item name="android:textColorHint">@color/sv_on_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="TabTitle" parent="">
        <item name="android:textColor">@color/sv_on_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:translationY">-0.62sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ErrorTextStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:translationY">-0.62sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChannelName" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="ChannelDescription" parent="">
        <item name="android:textColor">@color/channel_desc_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:translationY">-1.21sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="ExoPlayerTitleText" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ExoPlayerSubTitleText" parent="">
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">-0.62sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="QualityDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/quality_dialog_shape</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">
            @style/Widget.Theme.ExoPlayerStreamingApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="QualityText" parent="">
        <item name="android:textColor">@color/quality_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">-0.62sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SearchViewHintText" parent="">
        <item name="android:textColor">@color/sv_on_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">-2.62sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Theme.ExoPlayerStreamingApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ExoPlayerStreamingApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>